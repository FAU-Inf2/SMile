<?xml version="1.0" encoding="utf-8"?>
<com.fsck.k9.view.SmsLikeView xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".MainActivity">

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/smsLikeView_left"
    android:layout_width="240dp"
    android:layout_height="match_parent"
    android:layout_gravity="left"
    android:background="@android:color/holo_green_light">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/smsLikeView_left_linear"
        android:orientation="vertical">
    </LinearLayout>
</ScrollView>

    <FrameLayout
        android:id="@+id/sms_message_list_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="70dp"
        android:layout_marginStart="70dp"
        android:layout_gravity="start" />

</com.fsck.k9.view.SmsLikeView>