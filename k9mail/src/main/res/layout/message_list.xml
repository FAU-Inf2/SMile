<?xml version="1.0" encoding="utf-8"?>
<com.fsck.k9.view.ViewSwitcher xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <FrameLayout
        android:id="@+id/message_list_container"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

    <FrameLayout
        android:id="@+id/message_view_container"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

    <com.fsck.k9.view.SmsLikeView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/smsLikeView_scrollView_contacts"
            android:layout_width="240dp"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:background="@android:color/holo_green_light">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/smsLikeView_leftlinear_contacts"
                android:orientation="vertical">
            </LinearLayout>
        </ScrollView>

        <FrameLayout
            android:id="@+id/sms_message_list_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="70dp"
            android:layout_marginStart="70dp"
            android:layout_gravity="start" />
    </com.fsck.k9.view.SmsLikeView>

</com.fsck.k9.view.ViewSwitcher>